{{#unless flatMode}}
  <div class='buttons'>
    <button class='decrease-btn' {{action 'decreaseMonth'}}>{{decreaseButtonText}}</button>
    <button class='picker-toggle-btn rl-dropdown-toggle' {{action 'toggleDropdown'}}>
      {{#if monthText}}
        {{monthText}}
      {{else}}
        {{monthPlaceholderText}}
      {{/if}}
      <i class='caret'></i>
    </button>
    <button class='increase-btn' {{action 'increaseMonth'}}>{{increaseButtonText}}</button>
  </div>
{{/unless}}

{{#if pickerVisible}}
  <div class='picker rl-dropdown'>
    {{#if yearPickerMode}}
      {{rl-year-picker flatMode=true previousPageButtonText=previousPageButtonText nextPageButtonText=nextPageButtonText pickedYear="pickedYear"}}
    {{else}}
      <div class='page-controls'>
        <button class='previous-page-btn' {{action 'previousPage'}}>{{previousPageButtonText}}</button>
        <button class='year-picker-toggle-btn' {{action 'openYearPicker'}}>
          {{#if year}}
            {{displayedYear}}
          {{else}}
            {{yearPlaceholderText}}
          {{/if}}
          <i class='caret'></i>
        </button>
        <button class='next-page-btn' {{action 'nextPage'}}>{{nextPageButtonText}}</button>
      </div>

      <ul class='month-list'>
        {{#each month in months}}
          <li {{bind-attr class="month.isActive:active"}} {{action 'pickedMonth' displayedYear month.monthNumber}}>
            {{month.label}}
          </li>
        {{/each}}
      </ul>
    {{/if}}
  </div>
{{/if}}
